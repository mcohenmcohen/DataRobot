class _ATCNGMR(_BaseTextMiner):
    """
    Estimator for auto-tuned character ngrams for regression.
    """

    def _initialize(
            self,
            alpha=1.0,
            fit_intercept=True,
            normalize=False,
            copy_X=True,
            max_iter=None,
            solver='auto'):
        self.estimator = Ridge
        self.analyzer = 'char'
        self.weight_support = True
        self.alpha = alpha
        self.fit_intercept = fit_intercept
        self.normalize = normalize
        self.copy_X = copy_X
        self.max_iter = max_iter
        self.solver = solver
        self.est_args_names = [
            'alpha', 'fit_intercept', 'normalize', 'copy_X', 'max_iter', 'solver'
        ]

    def _get_param_names(self):
        out = super(_ATCNGMR, self)._get_param_names()
        out.extend(self.est_args_names)
        return out

